# Preload the library
set environment LD_PRELOAD=/root/appview/lib/linux/libappview.so

# Allow breakpoints on function not yet found without confirmation
set breakpoint pending on

# Set this when crashing in a child process
#set follow-fork-mode child

# Save command history
set history filename /root/appview/.gdb_history
set history save on
set history remove-duplicates unlimited
